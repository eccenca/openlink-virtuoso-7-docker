#!/bin/sh

set -e

# General settings
ODBC_SERVER_PORT=${ODBC_SERVER_PORT:-1111}
HTTP_SERVER_PORT=${HTTP_SERVER_PORT:-80}

set -eu

CONFIG="${VIRT_DB}/virtuoso.ini"

abort () {
  echo "$@" >&2
  exit 1
}

write_config () {
  cp $VIRT_INI_TEMPLATE $CONFIG

  # set general settings
  sed -i -e "s&^ServerPort      = 1111&ServerPort      = ${ODBC_SERVER_PORT}&" "$CONFIG"
  sed -i -e "s&^ServerPort      = 80&ServerPort      = ${HTTP_SERVER_PORT}&" "$CONFIG"
  sed -i -e "s&^DefaultHost     = localhost:80&DefaultHost      = localhost:${HTTP_SERVER_PORT}&" "$CONFIG"

}

# If we don't already have a config file, bootstrap
if [ ! -e "$CONFIG" ]; then
  write_config
fi
